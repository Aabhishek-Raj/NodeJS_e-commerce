    <script>
        async function changeQuantity(prodPrice, prodId, cartId, count){
            let quandity = parseInt(document.getElementById(prodId).innerHTML ) 
            // console.log(quandity, prodPrice, prodId, cartId, count);

            try{

                const result = await fetch('/changequandity', {
                    method: 'post',
                    body: JSON.stringify({quandity, prodPrice, prodId, cartId, count}),
                    headers: {'content-Type': 'application/json'}
                })
                const data = await result.json() 
                if(data.removed){
                    alert("product has been removed from the cart")
                    location.reload()
                }else{
                    // const singletotal = parseInt(prodPrice)  + parseInt(prodPrice)  *  parseInt(count) 
                    document.getElementById(prodId).innerHTML = quandity + count
                    document.getElementById('pTotal').innerHTML = data.userCart.total
                    document.getElementById('mTotal').innerHTML = data.userCart.total + 50
                    document.querySelector('#sTotal').innerHTML = data.userCart.total - (count * prodPrice)    
                    
                    document.getElementById('hiddentotal').value = data.userCart.total 
                }
            }catch(err){
                console.log(err);
            }
        }

